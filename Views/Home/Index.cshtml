@{
    ViewData["Title"] = "Home Page";
}
@model ProjectX.ViewModels.Workers;
<!DOCTYPE html>
<html>
<style>
    html, body {
    max-width: 100%;
    overflow-x: hidden;
}

    .mydiv {
        position: absolute;
        z-index: 9;
        background-color: #f1f1f1;
        text-align: center;
        vertical-align: top;
        border: 1px solid #d3d3d3;
        width: 90%;
        height: 5%;
        cursor: move;
    }

    #mydivheader {
        padding: 10px;
        cursor: move;
        z-index: 10;
        background-color: #2196F3;
        color: #fff;
    }

    .vl {
        border-left: 6px solid green;
        height: 500px;
        position: absolute;
        left: 25%;
        margin-left: -3px;
        top: 0;
    }

    .v2 {
        border-left: 6px solid green;
        height: 500px;
        position: absolute;
        left: 50%;
        margin-left: -3px;
        top: 0;
    }

    .v3 {
        border-left: 6px solid green;
        height: 500px;
        position: absolute;
        left: 75%;
        margin-left: -3px;
        top: 0;
    }

    .v4 {
        border-left: 6px solid green;
        height: 500px;
        position: absolute;
        left: 80%;
        margin-left: -3px;
        top: 0;
    }

    .sidenav {
        height: 100%;
        width: 350px;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        background-color: #111;
        overflow-x: hidden;
        transition: 0.5s;
        padding-top: 60px;
        visibility: hidden;
    }
</style>
<body onmousemove="mouse_position(event)">
    @{
        var workersList = Model;
    }
    <div class="main">
        <div class="vl"></div>
        <div class="v2"></div>
        <div class="v3"></div>


        <div id="mySidenav" class="sidenav">
            <table>
                <tr><th></th></tr>
                @for (var i = 0; i < Model.WorkersData.Count; i++)
                {
                    <tr>
                        <td>
                            <div id="@i" onmouseenter="startDraging(@i)" class="mydiv">
                                <span>@Model.WorkersData[i].Name @Model.WorkersData[i].Surname</span>
                            </div>
                        </td>
                    </tr>
                }
            </table>

        </div>


    </div>
    <script>
        //Make the DIV element draggagle:
        document.addEventListener('mousemove', onMouseUpdate, false);
        document.addEventListener('mouseenter', onMouseUpdate, false);
        var coulmnCounter = {};
        var pageWidth = getWidth();
        function startDraging(id) {
            dragElement(document.getElementById(id), id);
        }

        function dragElement(elmnt, save_id) {
            var pos1 = 0, pos2 = 0, pos3 = 0, pos4 = 0;
            if (document.getElementById(elmnt.id + "header")) {
                document.getElementById(elmnt.id + "header").onmousedown = dragMouseDown;
            } else {
                elmnt.onmousedown = dragMouseDown;
            }

            function dragMouseDown(e) {
                e = e || window.event;
                e.preventDefault();
                // get the mouse cursor position at startup:
                pos3 = e.clientX;
                pos4 = e.clientY;
                document.onmouseup = closeDragElement;
                // call a function whenever the cursor moves:
                document.onmousemove = elementDrag;
            }

            function elementDrag(e) {
                e = e || window.event;
                e.preventDefault();
                // calculate the new cursor position:
                pos1 = pos3 - e.clientX;
                pos2 = pos4 - e.clientY;
                pos3 = e.clientX;
                pos4 = e.clientY;
                // set the element's new position:
                elmnt.style.top = (elmnt.offsetTop - pos2) + "px";
                elmnt.style.left = (elmnt.offsetLeft - pos1) + "px";
            }

            function closeDragElement(e) {
                /* stop moving when mouse button is released:*/
                e = e || window.event;
                e.preventDefault();

                pos1 = pos3 - e.clientX;

                //to check why last table go over board...
                if (((elmnt.offsetLeft - pos1 >= 0) && (elmnt.offsetLeft - pos1 <= pageWidth * 0.125)) || (elmnt.offsetLeft - pos1 < 0)) {
                    elmnt.style.left = pageWidth * 0 + "px";
                    coulmnCounter[save_id] = 0;
                }
                if ((elmnt.offsetLeft - pos1 > pageWidth * 0.125) && (elmnt.offsetLeft - pos1 <= pageWidth * 0.375)) {
                    elmnt.style.left = pageWidth * 0.25 + "px";
                    coulmnCounter[save_id] = 1;
                }
                if ((elmnt.offsetLeft - pos1 > pageWidth * 0.375) && (elmnt.offsetLeft - pos1 <= pageWidth * 0.625)) {
                    elmnt.style.left = pageWidth * 0.5 + "px";
                    coulmnCounter[save_id] = 2;
                }
                if (((elmnt.offsetLeft - pos1 > pageWidth * 0.625) && (elmnt.offsetLeft - pos1 <= pageWidth * 0.825)) || (elmnt.offsetLeft - pos1 > pageWidth * 0.825)) {
                    elmnt.style.left = pageWidth * 0.75 + "px";
                    coulmnCounter[save_id] = 3;
                }

                document.onmouseup = null;
                document.onmousemove = null;
                var countInColumns = [0, 0, 0, 0];

                for (var key in coulmnCounter) {
                    var value = coulmnCounter[key];
                    console.log("On key " + key + " value is : " + value);
                    countInColumns[value] += 1;
                }

                console.log(typeof getKeyByValue(coulmnCounter, 1) + "   " + "Si");
                console.log(getKeyByValue(coulmnCounter, 1));
                elmnt.style.top = getHeight() * (0.05 * (countInColumns[coulmnCounter[save_id]] - 1)) + "px";

                //check if are not void table on board
                for (var i = 0; i < 4; i++) {
                    if (countInColumns[i] > 0) {
                        var vals = getKeyByValue(coulmnCounter, i);
                        if (vals.length > 1) {
                            for (var j = 0; j < vals.length; j++) {
                                document.getElementById(vals[j]).style.top = getHeight() * (0.05 * (j)) + "px";
                            }
                        }
                        else if (vals.length == 1) {
                            document.getElementById(vals[0]).style.top = 0 + "px";
                        }
                    }
                }

                elmnt.style.visibility = "visible";
                elmnt.style.width = '25%';
                document.getElementsByClassName("main")[0].appendChild(document.getElementById(save_id));

            }


        }

        function getWidth() {
            console.log("Raz dziffko");
            return Math.max(
                document.body.scrollWidth,
                document.documentElement.scrollWidth,
                document.body.offsetWidth,
                document.documentElement.offsetWidth,
                document.documentElement.clientWidth
            );
        }

        function getHeight() {
            return Math.max(
                document.body.scrollHeight,
                document.documentElement.scrollHeight,
                document.body.offsetHeight,
                document.documentElement.offsetHeight,
                document.documentElement.clientHeight
            );
        }

        function onMouseUpdate(e) {
            x = e.pageX;
            y = e.pageY;
            if (x < pageWidth * 0.01) {
                openNav();
            }
            if (x > 250) {
                closeNav();
            }

        }

        function openNav() {
            document.getElementById("mySidenav").style.visibility = "visible";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.visibility = "hidden";
        }

        function getKeyByValue(object, value) {
            return Object.keys(object).filter(key => object[key] === value);
        }

    </script>

</body>
</html>
